{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "rules": {
    "interface-name": false,
    "object-literal-sort-keys": false,
    "ordered-imports": {
      "severity": "warning"
    },
    "no-switch-case-fall-through": true,
    "prefer-const": {
      "severity": "warning"
    },
    "member-ordering": {
      "severity": "warning",
      "options": {
        "order": "fields-first",
        "alphabetize": false
      }
    }
  }
}
